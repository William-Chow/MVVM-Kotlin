<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <size android:width="@dimen/dimen_3" android:height="@dimen/dimen_40"/>
        </shape>
    </item>

    <item android:bottom="@dimen/dimen_15">
        <rotate
            android:fromDegrees="-130"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/design_default_color_on_primary"/>
                <corners
                    android:radius="@dimen/dimen_1"
                    android:bottomRightRadius="0dp"
                    android:bottomLeftRadius="0dp"/>
            </shape>
        </rotate>
    </item>

    <item android:top="@dimen/dimen_15">
        <rotate
            android:fromDegrees="130"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/design_default_color_on_primary"/>
                <corners
                    android:radius="1dp"
                    android:topRightRadius="0dp"
                    android:topLeftRadius="0dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>